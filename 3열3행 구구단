import java.util.*;

public class test {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		for(int i=1;i<9;i+=3) {
			System.out.printf("%d단\t%d단\t%d단\n", i, i+1, i+2);
			for(int j=1;j<=9;j++) {
				System.out.printf("%d*%d=%d\t%d*%d=%d\t%d*%d=%d\n", i, j, i*j, i+1,j,(i+1)*j, i+2,j,(i+2)*j);
			}
			System.out.println();
		}
	}
}
